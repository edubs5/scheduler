<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @schedule, remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :name, "Schedule Name", class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location, class: "control-label" %>
          <%= f.collection_select :location_id,
            @locations, :id,
              :name, {},
              { class: "form-control select-picker" } %>
        </div>
        <div class="row" >
          <div class="form-group col-xs-6">
            <%= f.label :start_date, "Start Date", class: "control-label" %>
            <%= f.text_field :start_date,
              class: 'datepicker form-control date',
              id: 'datetimepicker6',
              value: f.object.start_date.try(:strftime, "%d - %B - %Y") %>
          </div>
          <div class="form-group col-xs-6">
            <%= f.label :end_date, "End Date", class: "control-label" %>
            <%= f.text_field :end_date,
              class: 'datepicker form-control date',
              id: 'datetimepicker7',
              value: f.object.start_date.try(:strftime, "%d - %B - %Y") %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker6').datetimepicker({
            format: 'DD - MMMM - YYYY'
          });
        $('#datetimepicker7').datetimepicker({
            format: 'DD - MMMM - YYYY',
            useCurrent: false
        });
    });
</script>